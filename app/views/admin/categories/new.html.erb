<div class="max-w-lg mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">New Category</h1>

  <%= form_with(model: [:admin, @admin_category], url: admin_categories_path, method: :post, class: "bg-white shadow-md rounded-md p-4") do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :name, class: "form-input w-full" %>
    </div>

    <div class="mb-4">
      <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :description, class: "form-textarea w-full" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "Create Category", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md" %>
    </div>
  <% end %>
</div>
