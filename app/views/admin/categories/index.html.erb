<h1 class="font-bold text-3xl">Categories</h1>

<%= link_to "New Category", new_admin_category_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded h-[50px] top-0 right-0 mt-4 mr-4" %>

<div class="mt-8">
  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
        <th class="px-6 py-3 bg-gray-50"></th> <!-- Add a column for actions -->
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @admin_categories.each do |category| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to category.name, admin_category_path(category), class: "text-blue-500 hover:underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap"><%= category.description %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to "Edit", edit_admin_category_path(category), class: "text-blue-500 hover:underline mr-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
