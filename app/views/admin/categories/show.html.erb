<div class="max-w-2xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4"><%= @admin_category.name %></h1>

  <div class="bg-white shadow-md rounded-md p-4">
    <p class="text-gray-700"><strong>Description:</strong> <%= @admin_category.description %></p>
  </div>

  <div class="mt-4">
    
    <%= link_to 'Edit', edit_admin_category_path(@admin_category), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md mr-2" %>
    <%= link_to "Delete", admin_category_path(@admin_category), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md mr-2" %>
    <%= link_to 'Back', admin_categories_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-md" %>
  </div>
</div>
